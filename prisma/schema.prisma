generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
model User {
  id                    String   @id @default(auto()) @map("_id") @db.ObjectId   
  email                 String   @unique
  password              String
  name                  String
  birthDate             DateTime
  gender                Gender

  agreedPrivacyPolicy   Boolean  // 개인정보 수집 동의
  agreedTermsOfUse      Boolean  // 이용약관 동의
  agreedDataUsage       Boolean  // 데이터 활용 동의
  agreedMarketing       Boolean? // 마케팅 수집 동의 (선택)

  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

enum Gender {
  MALE
  FEMALE
  OTHER
}
