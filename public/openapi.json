                        "industryCategory",
                        "monthlySalesRange",
                        "leaseType",
                        "id",
                        "region",
                        "industryDetail",
                        "openedAt",
                        "isClosed",
                        "closedAt",
                        "isReemployed",
                        "isDemolished",
                        "areaSizeM2",
                        "employeeCount",
